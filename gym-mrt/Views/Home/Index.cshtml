@{
    ViewData["Title"] = "Home Page";
}


<div class="bg-dark py-5 text-center text-light">
    <h1 class="display-4">Welcome to Gym MRT</h1>
    <p class="lead">Get the best equipment and support to help you get where you want to go.</p>
    <a href="#services" class="btn btn-lg btn-primary">Explore Our Services</a>
</div>

<section id="carousel" class="py-5">
    <div class="container">
        <div id="gymCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fisorepublic.com%2Fwp-content%2Fuploads%2F2018%2F11%2Fgym-workout.jpg&f=1&nofb=1&ipt=25a33a4d8f12d52414cc1a91e17040ad64f076816b44d149b8ecbdae4355f5eb&ipo=images" class="d-block w-100" alt="Gym Image 1">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>State-of-the-Art Equipment</h5>
                        <p>We offer a variety of modern fitness equipment for every goal.</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fisorepublic.com%2Fwp-content%2Fuploads%2F2018%2F11%2Fgym-workout.jpg&f=1&nofb=1&ipt=25a33a4d8f12d52414cc1a91e17040ad64f076816b44d149b8ecbdae4355f5eb&ipo=images" class="d-block w-100" alt="Gym Image 2">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Group Fitness Classes</h5>
                        <p>Stay motivated with group sessions designed for all fitness levels.</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fisorepublic.com%2Fwp-content%2Fuploads%2F2018%2F11%2Fgym-workout.jpg&f=1&nofb=1&ipt=25a33a4d8f12d52414cc1a91e17040ad64f076816b44d149b8ecbdae4355f5eb&ipo=images" class="d-block w-100" alt="Gym Image 3">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Professional Trainers</h5>
                        <p>Our trainers are here to guide you and help you reach your goals.</p>
                    </div>
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#gymCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#gymCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<section id="services" class="py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Our Services</h2>
        <div class="row">

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fisorepublic.com%2Fwp-content%2Fuploads%2F2018%2F11%2Fgym-workout.jpg&f=1&nofb=1&ipt=25a33a4d8f12d52414cc1a91e17040ad64f076816b44d149b8ecbdae4355f5eb&ipo=images" class="card-img-top" alt="Personal Training">
                    <div class="card-body">
                        <h5 class="card-title">Personal Training</h5>
                        <p class="card-text">Get customized workout plans with our expert trainers.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fisorepublic.com%2Fwp-content%2Fuploads%2F2018%2F11%2Fgym-workout.jpg&f=1&nofb=1&ipt=25a33a4d8f12d52414cc1a91e17040ad64f076816b44d149b8ecbdae4355f5eb&ipo=images" class="card-img-top" alt="Group Classes">
                    <div class="card-body">
                        <h5 class="card-title">Group Classes</h5>
                        <p class="card-text">Join our energetic group classes and get fit together.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fisorepublic.com%2Fwp-content%2Fuploads%2F2018%2F11%2Fgym-workout.jpg&f=1&nofb=1&ipt=25a33a4d8f12d52414cc1a91e17040ad64f076816b44d149b8ecbdae4355f5eb&ipo=images" class="card-img-top" alt="Nutrition Plans">
                    <div class="card-body">
                        <h5 class="card-title">Nutrition Plans</h5>
                        <p class="card-text">Personalized nutrition advice to help you achieve your fitness goals.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="subscriptions" class="bg-dark py-5 text-light">
    <div class="container">
        <h2 class="mb-4 text-center">Subscriptions</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Starter</h5>
                        <p class="card-text">Access to all gym facilities and equipment.</p>
                        <h3 class="text-white">€12/month</h3>
                        <a href="#" class="btn btn-primary">Sign Up</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Pro</h5>
                        <p class="card-text">Access to personal training sessions with our team.</p>
                        <h3 class="text-white">€24/month</h3>
                        <a href="#" class="btn btn-primary">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
